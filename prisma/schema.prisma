// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Flashcard {
  id          String   @id @default(cuid())
  character   String   // The kanji/kana character(s)
  onyomi      String?  // Chinese-derived reading (for kanji only)
  kunyomi     String?  // Japanese-derived reading (for kanji only)
  meaning     String   // English meaning
  type        CardType // Kanji, Hiragana, or Katakana
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  reviews     Review[]
}

model Review {
  id          String      @id @default(cuid())
  flashcard   Flashcard   @relation(fields: [flashcardId], references: [id])
  flashcardId String
  result      ReviewResult
  readingType ReadingType
  reviewedAt  DateTime    @default(now())
  nextReview  DateTime
  session     Session?    @relation(fields: [sessionId], references: [id])
  sessionId   String?
}

model Session {
  id          String   @id @default(cuid())
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  totalCards  Int
  results     Json     // Will store counts of AGAIN/HARD/GOOD/EASY
  reviews     Review[]
}

enum CardType {
  KANJI
  HIRAGANA
  KATAKANA
}

enum ReadingType {
  ONYOMI
  KUNYOMI
  KANA     // for hiragana/katakana
}

enum ReviewResult {
  EASY
  GOOD
  HARD
  AGAIN
}